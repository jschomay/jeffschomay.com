// nib for vendor previxes and some extra goodies
@import 'nib'
// semantic grid
@import 'grid'
// grid variabls
// total-width = 100%

// from nib
global-reset()


/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa5b4d
background-color = #faf9f0

h1
  font-size 25px
  padding 5px

h2
  font-size 20px

h3
  font-size 18px


body
  font-family 'Georgia'
  background-color background-color
  color #444

header
  font-family 'Quicksand'
  padding 50px 10px
  color #fff
  font-size 25px
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

#content
  // column 12
  margin auto
  width 960px
  overflow hidden
  background yellow

#creative-content
  background blue
  column 6


  p
    margin-bottom 20px

#technical-content
  background red
  column 6

  #widgets
    row 6

    .widget
      column 2,6
      background #ccc

      h1
        font-family 'Quicksand'
        margin 13px 10px 4px
        padding-bottom 10px
        border-bottom 1px dotted #ddd
        border-radius 2px 2px 0px 0px
        margin-bottom 10px

      p
        font-size 13px
        padding 0px 10px
        margin-bottom 10px

p
  line-height 1.8

footer
  width 500px
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px