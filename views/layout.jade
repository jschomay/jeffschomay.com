    script(src="/js/jquery.masonry.min.js")
    script
      window.addEventListener('load', function() {
        var mySwitch = document.getElementById('switch');
        var body = document.getElementsByTagName('body')[0];
        mySwitch.addEventListener('click', function(e) {
          // only switch if you click the right part of the switch
          if (body.className === 'technical' && e.pageX > document.width/2
            || body.className === 'creative' && e.pageX< document.width/2) {
            // only ever expect a class of "technical" or "creative" on the body tag
            // since it's my code, I'll make sure of that
            body.className = body.className === "technical" ? "creative" : "technical";
          }
        });
      });
      $(document).ready(function() {
        var $container = $('.projects');
        $container.imagesLoaded(function(){
          $container.masonry({
            itemSelector : '.project',
            columnWidth : $container.width()/2
          });
        });
      });
